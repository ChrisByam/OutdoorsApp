<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.byam.chris.outdoorsapp.AltitudeActivity"
    tools:showIn="@layout/activity_altitude"
    android:background="#000059"
    android:onClick="setOriginAltitude">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Altitude:"
        android:id="@+id/currentAltitude"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#C0C0C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Origin Altitude"
        android:id="@+id/originAltitude"
        android:layout_alignBottom="@+id/currentAltitude"
        android:layout_alignLeft="@+id/currentAltitude"
        android:layout_alignStart="@+id/currentAltitude"
        android:layout_marginBottom="27dp"
        android:textColor="#C0C0C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentVal"
        android:layout_alignTop="@+id/currentAltitude"
        android:layout_toRightOf="@+id/currentAltitude"
        android:layout_toEndOf="@+id/currentAltitude"
        android:textColor="#C0C0C0"
        android:text="          " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/originVal"
        android:textColor="#C0C0C0"
        android:text="          "
        android:layout_alignTop="@+id/originAltitude"
        android:layout_toRightOf="@+id/currentAltitude"
        android:layout_toEndOf="@+id/currentAltitude" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Origin Altitude"
        android:id="@+id/button2"
        android:layout_below="@+id/currentAltitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="148dp" />

</RelativeLayout>
